{
  "settings": { 
    "index": {
        "analysis": {
            "analyzer": {
                "phonetic_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "standard",
                        "lowercase",
                        "custom_phonetic"
                    ]
                }
            },
            "filter": {
                "custom_phonetic": {
                    "type": "phonetic",
                    "encoder": "beider_morse",
                    "replace": true,
                    "languageset": "cjk"
                }
            }
        }
    }
  },
  "mappings": {
    "content_units": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "mdb_uid": {
          "type": "keyword",
          "index": false
        },
        "name": {
          "type": "text",
          "analyzer": "phonetic_analyzer",
          "fields": {
              "analyzed": {
                  "type": "text",
                  "analyzer": "cjk"
              }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "phonetic_analyzer",
          "fields": {
              "analyzed": {
                  "type": "text",
                  "analyzer": "cjk"
              }
          }
        },
        "content_type": {
          "type": "keyword",
          "index": false
        },
        "film_date": {
          "type": "date",
          "format": "strict_date"
        },
        "duration": {
          "type": "short",
          "index": false
        },
        "original_language": {
          "type": "keyword",
          "index": false
        },
        "translations": {
          "type": "keyword",
          "index": false
        },
        "tags": {
          "type": "keyword"
        },
        "sources": {
          "type": "keyword"
        },
        "persons": {
          "type": "keyword",
          "index": false
        },
        "transcript": {
          "type": "text",
          "analyzer": "phonetic_analyzer",
          "fields": {
              "analyzed": {
                  "type": "text",
                  "analyzer": "cjk"
              }
          }
        }
      }
    }
  }
}
